<section>
  <h2 class="text-light">Create New Post</h2>

  <form class="new-post-form">
    <div class="text-light">
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div class="text-light">
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>


<section>
  <h2 class="text-light">Your Posts</h2>
  <ol class="">
    {{#each posts as |post|}}
    <li class="bg-dark p-2 border border-primary mb-2">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>

<script src="/javascript/add-post.js"></script>
