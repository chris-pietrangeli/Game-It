<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="text-light">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="text-light">
      <input name="post-message" class="form-control" type="text" value="{{post.post_message}}" />
    </div>
    <div class="text-light">
      {{post.vote_count}} {{format_plural "Like" post.vote_count}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Save post</button>
      <button type="button" class="btn btn-danger" id="delete-post-btn">Delete post</button>
    </div>
  </form>
</article>

<form class="comment-form mt-3">
  <div>
    <textarea name="comment-body" class="form-control"></textarea>
  </div>

  <div class="mt-3">
    <button type="submit" class="btn btn-primary">add comment</button>
  </div>
</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>